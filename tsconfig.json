{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es5", "es2015", "esnext", "dom"],
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist/esm",
    "skipLibCheck": true,
    "target": "es6"
  },
  "include": [
    "src/**/*.ts",
    "tests/global/global.d.ts"
  ]
}
